import java.awt.BorderLayout;
import java.awt.Button;
import java.awt.Color;
import java.awt.Cursor;
import java.awt.FlowLayout;
import java.awt.Frame;
import java.awt.GridLayout;
import java.awt.Panel;
import java.awt.TextField;

public class Main {
	
	static Frame f;
	static Button plus, minus, divide, multiply, clear, equals;
	static Button one, two, three, four, five, six, seven, eight, nine, zero;
	static TextField T1, T2, T3;
	static Panel p2, p1;
	
	public static void main(String[] args) {
		
		f = new Frame();
		
		f.setSize(500,500);
		f.setLayout(new FlowLayout());
		f.setTitle("Full Calculator");
		f.setBackground(Color.CYAN);
		f.setCursor(Cursor.HAND_CURSOR);
		f.setVisible(true);
		
		f.add(p1, BorderLayout.CENTER);
		f.add(p2, BorderLayout.SOUTH);
		p2.setLayout(new GridLayout());
		
		one = new Button("1");
		two = new Button("2");
		three = new Button("3");
		four = new Button("4");
		five = new Button("5");
		six = new Button("6");
		seven = new Button("7");
		eight = new Button("8");
		nine = new Button("9");
		zero = new Button("0");

		
		p2.add(nine, BorderLayout.CENTER);
		p2.add(eight, BorderLayout.CENTER);
		p2.add(seven, BorderLayout.CENTER);
		p2.add(six, BorderLayout.CENTER);
		p2.add(five, BorderLayout.CENTER);
		p2.add(four, BorderLayout.CENTER);
		p2.add(three, BorderLayout.CENTER);
		p2.add(two, BorderLayout.CENTER);
		p2.add(one, BorderLayout.CENTER);
		p2.add(zero, BorderLayout.CENTER);
		


	}

}
